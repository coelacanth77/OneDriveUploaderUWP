<Page
    x:Class="OneDriveUploaderUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneDriveUploaderUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="messageText" Text="OneDriveに画像をアップロードするサンプルです。" Margin="20,10,0,0"/>
        <Button x:Name="connectOneDriveButton" Content="OneDriveに接続する" Click="connectOneDriveButton_Click" Margin="20,10,0,0"/>
        <Button x:Name="selectImageButton" Content="画像を選択する" Click="selectImageButton_Click" Margin="20,10,0,0" />
        <Button x:Name="uploadImageButton" Content="画像をアップロードする" Click="uploadImageButton_Click" Margin="20,10,0,0" />
        <Image x:Name="selectedImage" Height="300" Width="300"/>
    </StackPanel>
</Page>
